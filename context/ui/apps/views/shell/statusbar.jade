.row.well
  span#status-cwd.pull-left= model.get("cwd")
  - if(model.get("git_head"))
    span.pull-left @ 
    span#status-cwd-git_head.pull-left #{model.get("git_head").name}
  - if(model.get("git_status"))
    - if(model.get("git_status").clean)
      span#status-cwd-git.pull-left.alert-success [clean]
    - else
      span#status-cwd-git.pull-left.alert-info [has changes]
  - if(model.get("git_sync") != null)
    - if(model.get("git_sync"))
      span#status-cwd-git_sync.pull-left.alert-success [in sync]
    - else
      span#status-cwd-git_sync.pull-left.alert-info [out of sync]
  span.pull-right node #{model.get("currentNodeVersion")}
    sub
      span /a v#{model.get("version")}
